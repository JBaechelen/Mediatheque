@{
    Dictionary<string, string> myMenu = new Dictionary<string, string>()
    {
        {"Tout les jeux", "/home/index"},
        {"Rpg", "/home/index/rpg"},
        {"Aventure", "/home/index/aventure"},
        {"Course", "/home/index/course"}
    };

}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Hobbies</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/css/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>

</head>

<body>
    <header id="header">
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand fa fa-gamepad" style="color:white">
                <strong>Games</strong>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @MesHelpers.AjoutMenu(myMenu)
                </ul>
            </div>
        </nav>
    </header>

    <main id="main" class="container">

        @RenderBody()

    </main>

    <footer id="footer">
        <div>
            Moi &copy; @DateTime.Now.Year.ToString()
        </div>        
    </footer>

</body>
</html>